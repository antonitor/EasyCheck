<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/permissos_necessaris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera_permission_denied"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="100sp"/>

    <ImageButton
        android:id="@+id/preguntar_permissos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/stat_notify_sync_noanim"
        android:onClick="checkPermissions"
        android:src="@android:drawable/stat_notify_sync_noanim"
        android:visibility="invisible" />

</LinearLayout>
